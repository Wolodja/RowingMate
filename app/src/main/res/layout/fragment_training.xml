        android:layout_height="wrap_content"
        android:layout_marginLeft="100pt"
        android:layout_marginTop="125pt"
        android:gravity="center"
        android:ems="6"
        android:inputType="number" />

    <Button
        android:id="@+id/wyszukajTrening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6pt"
        android:layout_marginLeft="62pt"
        android:layout_marginTop="200pt"
        android:background="@android:color/holo_green_light"
        android:text=" Wyszukaj treningi "
